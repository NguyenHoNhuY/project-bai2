<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trang Chá»§</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"
    ></script>
    <style>
      html,
      body {
        height: 100%;
        width: 100%;
        margin: 0;
        display: table;
      }

      footer {
        background-color: grey;
        display: table-row;
        height: 0;
      }
    </style>
  </head>
  <body>
    <%- include("../part/header") %>

    <div class="container mt-5">
      <div class="w-100 d-flex justify-content-end mb-3">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add Student
        </button>
      </div>
      <table class="table table-dark table-striped">
        <tr>
          <th>Student Name</th>
          <th>Old</th>
          <th>Email</th>
          <th>Edit by modal</th>
          <th>Delete</th>
        </tr>
        <% for(let item of students) {%>
        <tr>
          <td id="name<%= item._id %>"><%= item.name %></td>
          <td id="old<%= item._id %>"><%= item.old %></td>
          <td id="email<%= item._id %>"><%= item.email %></td>
          <td>
            <button
              type="button"
              class="btn btn-warning editModal"
              data-bs-toggle="modal"
              data-bs-target="#editModal"
              id="<%= item._id %>"
            >
              Edit student by modal
            </button>
          </td>
          <td>
            <form
              action="/student/delete/<%= item._id %>?_method=DELETE"
              method="post"
            >
              <button class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
    <!-- Modal add -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Student</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/student/add" method="POST">
              <div class="form-floating">
                <input
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  placeholder="Student Name"
                  name="name"
                />
                <label for="floatingInput">Customer Name</label>
              </div>
              <div class="form-floating">
                <input
                  type="text"
                  class="form-control"
                  id="floatingPassword"
                  placeholder="Old"
                  name="old"
                />
                <label for="floatingPassword">Old</label>
              </div>
              <div class="form-floating">
                <input
                  type="email"
                  class="form-control"
                  id="floatingPassword"
                  placeholder="Email"
                  name="email"
                />
                <label for="floatingPassword">Email</label>
              </div>
              <div class="form-floating">
                <input
                  type="submit"
                  value="Save"
                  id="floatingSubmit"
                  class="form-control btn btn-primary"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal edit -->
    <div
      class="modal fade"
      id="editModal"
      tabindex="-1"
      aria-labelledby="editModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Student</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body"><%- include ("editStudent") %></div>
        </div>
      </div>
    </div>

    <%- include("../part/footer") %>
  </body>
  <script>
    const editModal = document.getElementsByClassName("editModal");
    for (let item of editModal) {
      item.addEventListener("click", function (e) {
        document.getElementById("name").value = document.getElementById(
          "name" + this.id
        ).innerHTML;
        document.getElementById("old").value = document.getElementById(
          "old" + this.id
        ).innerHTML;
        document.getElementById("email").value = document.getElementById(
          "email" + this.id
        ).innerHTML;
        document.editForm.action = "/student/edit/" + this.id + "?_method=PUT";
      });
    }
  </script>
</html>
